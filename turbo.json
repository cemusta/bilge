{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["./dist"]
    },
    "lint": {
      "outputLogs": "new-only",
      "cache": false,
      "dependsOn": ["^lint"]
    },
    "test": {
      "outputLogs": "new-only",
      "cache": false,
      "persistent": true
    },
    "watch": {
      "outputLogs": "new-only",
      "cache": false,
      "persistent": true
    },
    "start": {
      "outputLogs": "new-only",
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
